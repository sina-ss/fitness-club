CREATE TABLE Users (
  ID INT AUTO_INCREMENT PRIMARY KEY,
  username VARCHAR(255) UNIQUE,
  password VARCHAR(255),
  name VARCHAR(255),
  familyName VARCHAR(255),
  shift VARCHAR(255),
  role VARCHAR(255)
);

CREATE TABLE Courses (
  ID INT AUTO_INCREMENT PRIMARY KEY,
  name VARCHAR(255),
  trainerId INT,
  FOREIGN KEY (trainerId) REFERENCES Users(ID) ON DELETE CASCADE ON UPDATE CASCADE
);

CREATE TABLE RegisteredCourses (
  ID INT AUTO_INCREMENT PRIMARY KEY,
  memberId INT,
  courseId INT,
  FOREIGN KEY (memberId) REFERENCES Users(ID) ON DELETE CASCADE ON UPDATE CASCADE,
  FOREIGN KEY (courseId) REFERENCES Courses(ID) ON DELETE CASCADE ON UPDATE CASCADE
);
ALTER TABLE RegisteredCourses ADD COLUMN attended BOOLEAN NOT NULL DEFAULT FALSE; 